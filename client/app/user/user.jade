div(ng-include='"components/navbar/navbar.html"')

div(ng-controller='UserCtrl')

.votingForm
  header#banner.hero-unit
    .container
      h1 Vote Today!
      p.lead Free voting polls just a few clicks away
      button.btn.btn-lg.btn-success Sign Up
      
  .container
    .col-lg-4.description
      h1 {{poll.poll_name + '?'}}
      p.lead by {{poll.user_name}}
      
    .col-lg-4
      form
        ul.list-group
          li.list-group-item( ng-repeat="item in poll.poll_options") 
            input(type='radio') 
            {{item}}

        button.btn.btn-lg.btn-success Vote!
        
    .col-lg-4.comments
      p(ng-repeat="comment in poll.comments" ng-show="commentsExist")
      p(ng-hide="commentsExist") Sorry, no comments yet.
